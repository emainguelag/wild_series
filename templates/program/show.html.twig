{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media bg-light">
		<img class="w-25 align-self-start m-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body m-3 p-3 ">
			<strong>Titre :</strong>
			<h1 class="mt-0">{{ program.title }}</h1>
			<strong>Synopsis :</strong>
			<p>{{ program.synopsis }}</p>
			<strong>Catégorie :</strong>
			<p>{{ program.category.name }}</p>
			<strong>Durée :</strong>
			<p>{{ programDuration }}</p>
		</div>
	</div>
	<div class="media m-3 p-3 bg-secondary">
		<strong>Saisons :</strong>
		{% for season in program.seasons %}
			<ul class="list-group col-md-6 offset-md-3 mt-3 mb-3">
				<a href="{{ path("program_season_show", { slug: program.slug , season: season.id }) }}" class="list-group-item">
					Saison
					{{ season.number }}
					/
					{{ season.year }}
				</a>
			</ul>
		{% endfor %}
	</div>
	<div class="media m-3 p-3 bg-secondary">
		<strong>Acteurs :</strong>
		{% for actor in program.actors %}
			<ul class="list-group col-md-6 offset-md-3 mt-3 mb-3">

				<a href="{{ path("app_actor_show", { id: actor.id }) }}" class="list-group-item">
					{{ actor.name }}
				</a>
			</ul>
		{% else %}
			<li>Aucun acteur pour cette série</li>
		{% endfor %}

	</div>

	<a href="{{ path('program_index') }}" class="btn btn-primary btn-lg active">
		Retour à la liste des programmes
	</a>
{% endblock %}
