{% extends 'base.html.twig' %}

{% block title %}All categories
{% endblock %}

{% block body %}
	<section class="bg-light">
		<h1>Toutes les catégories de la table category :
		</h1>

    <div class="row d-flex flex-row">
		  {% for category in categories %}

            <ul class="list-group">
                <li class="list-group-item">{{ loop.index }} /	{{ category.name }}</li>
            </ul>

		  {% else %}
			  Aucune categorie trouvée.
		  {% endfor %}
    </div>

		<a href="{{ path('app_index') }}">
			Retour à l'accueil
		</a>


	</section>
{% endblock %}
